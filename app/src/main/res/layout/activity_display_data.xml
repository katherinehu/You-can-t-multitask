<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayData">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardSearchOptions" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSearchOptions"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvSort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sort by:"
                tools:layout_editor_absoluteX="182dp"
                tools:layout_editor_absoluteY="16dp" />

            <RadioGroup
                android:id="@+id/rdgSort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </RadioGroup>

            <RadioButton
                android:id="@+id/rdAlpha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alphabetical"
                tools:layout_editor_absoluteY="36dp" />

            <RadioButton
                android:id="@+id/rdPriceLH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price - Low to High"
                tools:layout_editor_absoluteX="262dp"
                tools:layout_editor_absoluteY="36dp" />

            <RadioButton
                android:id="@+id/rdEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ending soon"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="68dp" />

            <RadioButton
                android:id="@+id/rdPriceHL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price - High to Low"
                tools:layout_editor_absoluteX="262dp"
                tools:layout_editor_absoluteY="68dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter by:"
                tools:layout_editor_absoluteX="177dp"
                tools:layout_editor_absoluteY="112dp" />


            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rarity"
                tools:layout_editor_absoluteY="131dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>